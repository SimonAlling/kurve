{
  "name": "zatacka",
  "description": "Achtung, die Kurve! in JavaScript",
  "scripts": {
    "postinstall": "elm-tooling install",
    "install-hooks": "[ -d .git/ ] && cp hooks/* .git/hooks",
    "sass-build": "sass --source-map src/css/:_site/css/",
    "build": "elm-watch make --optimize && npm run sass-build",
    "build:scenario-in-original-game": "elm make --optimize tools/ScenarioInOriginalGame/ScenarioCLI.elm --output tools/ScenarioInOriginalGame/ScenarioCLI.js",
    "check-formatting": "elm-format --validate .",
    "review": "elm-review",
    "test": "elm-test",
    "start": "npm run install-hooks && run-pty % elm-watch hot % esbuild --serve --servedir=./_site/ % sass --watch --source-map src/css/:_site/css/"
  },
  "author": "Simon Alling",
  "devDependencies": {
    "elm-review": "2.12.0",
    "elm-test": "0.19.1-revision12",
    "elm-tooling": "1.17.0",
    "elm-watch": "1.2.3",
    "esbuild": "0.25.12",
    "sass": "1.43.3"
  },
  "optionalDependencies": {
    "run-pty": "^5.0.0"
  }
}
