{
  "name": "zatacka",
  "description": "Achtung, die Kurve! in JavaScript",
  "scripts": {
    "postinstall": "elm-tooling install",
    "sass-build": "sass --source-map src/css/:css/",
    "sass-watch": "sass --watch --source-map src/css/:css/",
    "build": "elm make src/Main.elm --output js/kurve.min.js",
    "watch": "elm-live --start-page=ZATACKA.html src/Main.elm -- --output=js/kurve.min.js",
    "deploy": "git checkout master && git merge --no-ff -m \"Merge branch 'develop'\" develop && npm run build && git add -f js css && git commit -m \"Deploy\""
  },
  "author": "Simon Alling",
  "devDependencies": {
    "elm-live": "^4.0.2",
    "elm-tooling": "^1.6.0",
    "sass": "^1.43.3"
  }
}
